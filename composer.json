{
    "name": "diandi/hyperf-casbin",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "",
    "autoload": {
        "psr-4": {
            "Diandi\\HyperfCasbin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "hyperf/database": "3.*",
        "hyperf/db-connection": "3.*",
        "hyperf/cache": "3.*",
        "hyperf/utils": "3.*",
        "hyperf/config": "3.*",
        "hyperf/logger": "3.*",
        "casbin/casbin": "~3.6.0",
        "hyperf/command": "3.*",
        "casbin/psr3-bridge": "^1.3",
        "hyperf/validation": "3.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "1.0.0",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Diandi\\HyperfCasbin\\ConfigProvider"
        }
    }
}
